// Type script config file tsc type script compiler reads this
{
  "compilerOptions": {
    "target": "es5", // transpile typescript code to es5 compatible code
    "module": "commonjs", //
    "moduleResolution": "node",
    "sourceMap": true, // should generate map files used for debugging
    "emitDecoratorMetadata": true, // required for Angular to compile support for decorators
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true, // no implicit any default untyped variables to any
    "suppressImplicitAnyIndexErrors": true
  }
}

